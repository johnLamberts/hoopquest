{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "rootDir": ".",
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "__test__/*.test.ts",
    "__test__/integration/*",
    "__test__/unit/*",
    "__test__/ unit /*"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
